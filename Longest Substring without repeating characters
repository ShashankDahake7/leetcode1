class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        int i = 0, j = 0, maxLength = 0;
        unordered_set<char> st;
        while (j < s.length()) {
            if (st.find(s[j]) == st.end()) {
                st.insert(s[j]);
                maxLength = max(maxLength, j - i + 1);
                j++;
            } 
            else {
                st.erase(s[i]);
                i++;
            }
        }
        return maxLength;
    }
};
