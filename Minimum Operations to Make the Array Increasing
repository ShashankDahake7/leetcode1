class Solution {
public:
    int minOperations(vector<int>& nums) {
        int count = 0;
        if(n == 1){
            return 0;
        }
        for(int i = 1; i < nuums.size(); i++){
            if(nums[i] > nums[i - 1]){
                continue;
            }
            else{
                int temp = nums[i - 1] - nums[i] + 1;
                nums[i] += temp;
                count += temp;
            }
        }
        return count;
    }
};
