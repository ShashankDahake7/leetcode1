class Solution {
public:
    ListNode* oddEvenList(ListNode* head) {
        ListNode *oddH=NULL;
        ListNode *evenH=NULL;
        ListNode *oddT=NULL;
        ListNode *evenT=NULL;
        int count=1;
        while(head!=NULL){
            if(count%2==0){
                if(evenH==NULL){
                    evenH=head;
                    evenT=head;
                    head=head->next;
                }
                else{
                    evenT->next=head;
                    evenT=evenT->next;
                    head=head->next;
                }
            }
            else{
                if(oddH==NULL){
                    oddH=oddT=head;
                    head=head->next;
                }
                else{
                    oddT->next=head;
                    oddT=oddT->next;
                    head=head->next;
                }
            }
            count++;
        }
        if(oddH==NULL){
            return evenH;
        }
        if(evenH==NULL){
            return oddH;
        }
        evenT->next=NULL;
        oddT->next=evenH;
        return oddH;
    }
};
